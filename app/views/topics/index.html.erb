<div class="main-body">
  <!--検索窓-->
  <div class="kensaku">検索窓</div>

  <!--新着情報-->
  <div class="under-bar"></div>
  <div class="new-topics">
    <%= image_tag("logo5.jpg", class:"left-pic") %>
    
    <div class="new-topic">
      <h2 class="heading-name">新着情報</h2>

      <ul class="messages">
        <% @topics.each do |f| %>
          <li class="message">
            <div><%= f.title_name %></div>
          </li>
        <% end %>

      </ul>
    </div>

    <%= image_tag("logo5.jpg", class:"right-pic") %>
  </div>

  <!--TOPIC-->
  <div class="under-bar"></div>
  <div>
    <h1 class="topic-main", id="lists">HEADING</h1>
  </div>

  <!--TOPICリスト-->
  <div class="topic-lists">
    
    <ul class="topic-titles", id="list">

      <% @topics.each do |topic| %>

        <li class="topic-title">
          <%= link_to edit_topic_path(topic.id), class:"title-name" do %>
            <%= topic.title_name %>
            <span><%= image_tag('arrow1.png', class:"arrow-tag") %></span>
          <% end %>
        </li>

      <% end %>

    </ul>

 <!--Createフォーム-->
 <div class="under-bar"></div>
 


   <div class="sends", id="send">
     <h3 class="send-message">新しいHEADINGの作成</h3>
        <%= form_with(model: @topic, local: true, id: "form") do |topic| %>

          <div class="error">
            <%= render 'shared/error_messages', model: topic.object %>
          </div>

          <div class="send-forms">
            <div>
              <%= topic.text_field :title_name,class:"send-form" %>
              <%= topic.submit "作成", class: "send-btn", id: "submit" %>
            </div>
          </div>

        <% end %>
   </div>


    
  </div>


</div>
